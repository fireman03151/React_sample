extends ../layout
block content
    include ../partials/flyer
    #modal-dialog.modal
        .modal-dialog
            .modal-content
                .modal-header
                    a.close(href='/settings', data-dismiss='modal', aria-hidden='true') Ã—
                    h3 You don't really want to delete your account, do you?
