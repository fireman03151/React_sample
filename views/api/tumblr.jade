extends ../layout

block content
  .page-header
    h1
      i.fa.fa-tumblr-square
      | Tumblr API
  .btn-group.btn-group-justified
    a.btn.btn-lg.btn-primary(href='http://www.tumblr.com/docs/en/api/v2#overview', target='_blank')
      i.fa.fa-check-square-o
      | Overview
    a.btn.btn-lg.btn-primary(href='https://api.tumblr.com/console', target='_blank')
      i.fa.fa-laptop
      | API Console
    a.btn.btn-lg.btn-primary(href='http://www.tumblr.com/docs/en/api/v2#blog_methods', target='_blank')
      i.fa.fa-code-fork
      | API Endpoints

  h3.text-primary #{blog.name}'s blog
  strong Blog Stats
  p
    .btn.btn-xs.btn-primary-outline
      i.fa.fa-file-text-o
      | #{blog.posts} posts

  for photo in photos
      img(src='#{photo.alt_sizes.slice(-3)[0].url}')